                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="@string/lister_first_name"-->
                        <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"-->
                        <!--android:layout_marginStart="15dp"-->
                        <!--android:layout_marginLeft="15dp"-->
                        <!--android:maxLines="1"-->
                        <!--android:ellipsize="end"-->
                        <!--android:layout_alignParentLeft="true"/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/textViewShortDesc"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="@string/lister_first_name"-->
                        <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"-->
                        <!--tools:ignore="HardcodedText"-->
                        <!--android:layout_marginStart="15dp"-->
                        <!--android:layout_marginLeft="15dp"-->
                        <!--android:maxLines="1"-->
                        <!--android:ellipsize="end"-->
                        <!--android:gravity="end"-->
                        <!--android:layout_alignParentRight="true"/>-->

                <!--</RelativeLayout>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lister_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lister_first_name"
                            android:textSize="14sp" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/rental_date_start_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/start_date_tv"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/rental_date_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/start_date"
                                android:textSize="14sp"
                                android:layout_toEndOf="@id/rental_date_start_label"
                                android:layout_toRightOf="@id/rental_date_start_label"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/rental_date_end_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/end_date_tv"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/rental_date_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/end_date"
                                android:textSize="14sp"
                                android:layout_toEndOf="@id/rental_date_end_label"
                                android:layout_toRightOf="@id/rental_date_end_label"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp" />

                        </RelativeLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <!--USER IMAGE CIRCLE-->
                        <RelativeLayout
                            android:id="@+id/img_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/circle_border">


                            <ImageView
                                android:id="@+id/user_img"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="3dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/circle"
                                android:padding="0dp"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/default_profile_photo_circle"/>
                            <!--android:src="@drawable/img_0002" />-->

                        </RelativeLayout>
                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="5604 ratings"-->
                        <!--android:textSize="13sp"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:layout_marginBottom="10dp"/>-->

                    </LinearLayout>
                </RelativeLayout>


                <TextView
                    android:id="@+id/rental_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewRating"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/imageView"
                    android:text="@string/total_cost_rental"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/imageView"
                    android:textColor="@color/colorPrimaryDark"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
